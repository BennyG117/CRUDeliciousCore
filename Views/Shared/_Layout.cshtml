<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUDeliciousCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUDeliciousCore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                @* REMINDER - UPDATES MAY BE NEEDED - switch home to "tbd" *@
                <a class="navbar-brand" asp-area="" asp-controller="Dish" asp-action="Index">CRUDeliciousCore</a>
                @*^^^ REMINDER - UPDATES MAY BE NEEDED ^^^*@

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* REMINDER - UPDATES MAY BE NEEDED - switch home to "tbd"*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dish" asp-action="Index">Home</a>
                        </li>
                        @*^^^ REMINDER - UPDATES MAY BE NEEDED ^^^*@
                        


                        @*REMINDER - UPDATES MAY BE NEEDED: switching home to "tbd" // taken from new view route "Newtbd" in "tbd" controller*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dish" asp-action="New">Add a Dish</a>
                        </li>
                        @*^^^ REMINDER - UPDATES MAY BE NEEDED ^^^*@

                    
                    </ul>
                </div>
            </div>
        </nav>
    </header>
@* UPDATING LAYOUT *@

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@* UPDATING LAYOUT *@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CRUDeliciousCore - <a asp-area="" asp-controller="Home" asp-action="New">Add a Dish</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
